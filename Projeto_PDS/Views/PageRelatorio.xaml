                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="6" Grid.Row="1" Height="100" Width="160">
            <Button Name="List_Caixa" Height="76" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="UltraBold" Background="#FF408F00" Click="Button_Click" Cursor="Hand" FontSize="22">
                <Button.Template>
                    <ControlTemplate>
                        <Border>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                    <GradientStop Color="#FF90CBA1" Offset="0"/>
                                    <GradientStop Color="#FF00F745" Offset="0.7"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Clip>
                                <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,150,76"/>
                            </Border.Clip>
                            <StackPanel>
                                <Ellipse Width="100" Height="100" Margin="0 -42 -120 0">
                                    <Ellipse.Fill>
                                        <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                            <GradientStop Color="#FF00F745" Offset="0"/>
                                            <GradientStop Color="#a0ffa9" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <materialDesign:PackIcon Kind="Pencil" Height="35" Width="35" Margin="0 -50 8 0" Foreground="White" HorizontalAlignment="Right" />
                                <StackPanel Margin="8 -28 0 0" VerticalAlignment="Bottom">
                                    <TextBlock Text="Listar" FontSize="13" Margin="0.8 0 0 -1" FontWeight="Normal"/>
                                    <TextBlock Text="Caixa" FontSize="18" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>


        <Frame x:Name="frameRelatorio" Grid.ColumnSpan="8" Grid.RowSpan="3" HorizontalAlignment="Stretch" NavigationUIVisibility="Hidden" Margin="60,25,60,10" Grid.Row="2" />

    </Grid>
</Page>
